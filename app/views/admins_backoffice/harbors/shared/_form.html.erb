


<% if @harbor.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert"
    aria-hidden="true">×</button>
    <ul>
    <% @harbor.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
    </ul>
    </div>
  <%end%> 
  



<div class="row">
  <div class="col-lg-12">
